<table>
  <tr>
    <th>Desk</th>
    <th>From/to</th>
    <th>Action</th>
  </tr>
  <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.desk.label%></td>
      <td><%= booking.begin_date.to_s%> - <%= booking.end_date.to_s%></td>
      <% if booking.in_valid? %>
        <td><%= link_to 'Edit', edit_user_booking_path(current_user, booking) %>
            <%= link_to 'Cancel', user_booking_path(current_user, booking), method: :delete%>
        </td>
      <% else %>
        <td>Past</td>
      <% end %>
   </tr>
  <% end %>
</table>
