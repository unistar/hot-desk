<% if logged_in? %>
  <p>Logged in, Hi <%= current_user.name %></p>
  <%= link_to "Log out", logout_path, method: :delete %>
  <%= link_to "Book new seat", new_user_booking_path(current_user.id) %>
  <table>
    <tr>
      <th>Name</th>
      <th>Desk</th>
      <th>From/to</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.bookings.first.desk.label%></td>
	<td><%= user.bookings.first.begin_date.to_s%> - <%= user.bookings.first.end_date.to_s%></td>
        <td><%= link_to 'View', user_path(user) %></td>
      </tr>
    <% end %>
  </table> 
<% else %>
  <h1>Welcome</h1>
  <p>Welcome to Hot Desk!. Please <%= link_to "Log in", login_path %> OR <%= link_to "Register", new_user_path %></p>
<% end %>
