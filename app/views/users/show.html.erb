<%= link_to "Home", root_path %>
<% if logged_in? %>
  <h2>Logged in, Hi <%= @user.name %></h2>
  <%= link_to "Log out", logout_path, method: :delete %>
  <h1>User details</h1>
  <p>name: <%= @user.name %></p>
  <p>email: <%= @user.email %></p>
  <% if @user.desks %>
    <p>Desk: <%= @user.bookings.first.desk.label%></p>
    <p>Date: <%= @user.bookings.first.begin_date.to_s%> - <%= @user.bookings.first.end_date.to_s%></p>
  <% end %>
<% else %>
  <h2>Please login first.</h2>
  <%= link_to "Log in", login_path %>
<% end %>
